fi

if [ -r etc/rc.d/rc.sendmail ]; then
  if [ -x etc/rc.d/rc.sendmail ]; then
    RC_SENDMAIL=on
  else
    RC_SENDMAIL=off
  fi
  cat << EOF >> $TMP/tmpscript
    "rc.sendmail" "The Sendmail mail server" $RC_SENDMAIL "The Sendmail server allows your machine to send and receive mail." \\
