  if [ -x etc/rc.d/rc.samba ]; then
    RC_SAMBA=on
  else
    RC_SAMBA=off
  fi
  cat << EOF >> $TMP/tmpscript
    "rc.samba" "The Samba file/print server" $RC_SAMBA "Samba is a file and print server for Windows networks." \\
