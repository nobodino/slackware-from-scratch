if [ -r etc/rc.d/rc.saslauthd ]; then
  if [ -x etc/rc.d/rc.saslauthd ]; then
    RC_SASLAUTHD=on
  else
    RC_SASLAUTHD=off
  fi
  cat << EOF >> $TMP/tmpscript
    "rc.saslauthd" "The SASL authentication server" $RC_SASLAUTHD "SASL is an authentication method often used by mail servers." \\
